# 2. Python Program to Perform all arithmetic operations

first_num= int(input("Enter first number: "))
second_num=int(input("Enter second numbr: "))
operation= input("Enter your operation: ")

# sum=first_num+second_num
# divide=first_num/second_num
# subtract=first_num-second_num
# multiply=first_num*second_num
# floor_division=first_num//second_num
# modulus=first_num%second_num
# exponential= first_num**second_num

if operation=="+":
    print(int(first_num+second_num))
if operation=="/":
    print(int(first_num/second_num))
elif operation=="-":
    print(int(first_num-second_num))
elif operation=="*":
    print(int(first_num*second_num))
elif operation=="//":
    print(int(first_num//second_num))
elif operation=="%":
    print(int(first_num%second_num))
elif operation=="**":
    print(int(first_num**second_num))
else:
    print("Please enter valid operation")
